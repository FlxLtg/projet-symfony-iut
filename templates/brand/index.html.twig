    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>*</th>
            <th>Nom</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>
                    <a href="{{ path('brand_show', {'id': brand.id}) }}">
                        <i class="eye icon"></i>
                    </a>
