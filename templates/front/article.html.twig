{% extends 'base_front.html.twig' %}

{% block title %}E-commerce - Ma page{% endblock %}

{% block body %}
    <div class="col-12">
        <h1>{{ product.name }} - {{ product.brand.name }}</h1>
        <div class="float-right">
            {% if app.user %}
                <div class="input-group mb-5">
                    <span class="input-group-btn">
                    <button type="button" class="btn btn-default btn-number" disabled="disabled" data-type="minus" data-field="quant[1]">
                      -
                    </button>
                    </span>
                    <input type="text" name="quant[1]" class="form-control input-number quantity" value="1" min="1" max="10">
                    <span class="input-group-btn">
                    <button type="button" class="btn btn-default btn-number" data-type="plus" data-field="quant[1]">
                      +
                    </button>
                  </span>
                    <button class="btn btn-success addToCart" data-id="{{ product.id }}">Ajouter</button>
                </div>
            {% endif %}
        </div>
        <p>
        {% for c in product.categories %}
            {{ c.name }}
        {% endfor %}
        </p>
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" style="width:100%; height: 200px !important;">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" style="max-height: 200px !important;" src="{{ asset('uploads/' ~ product.pictureFirst) }}" alt="First slide">
                </div>
                {% if product.pictureSecond %}
                <div class="carousel-item">
                    <img class="d-block w-100" style="max-height: 200px !important;" src="{{ asset('uploads/' ~ product.pictureSecond) }}" alt="Second slide">
                </div>
                {% endif %}
                {% if product.pictureThird %}
                <div class="carousel-item">
                    <img class="d-block w-100" style="max-height: 200px !important;" src="{{ asset('uploads/' ~ product.pictureThird) }}" alt="Third slide">
                </div>
                {% endif %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" style="color: #0a0a0a" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" style="color: #0a0a0a" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="pt-5">
            {{ product.description|raw }}
        </div>
    </div>

{% endblock %}
